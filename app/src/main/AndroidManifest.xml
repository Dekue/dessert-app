<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fuberlin.dessert"
    android:versionCode="3"
    android:versionName="2.0.0">
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
	<application
        android:icon="@drawable/icon"
        android:logo="@drawable/icon"
        android:theme="@style/color_override"
        android:label="@string/app_name"
        android:name="DessertApplication"
        android:allowBackup="false"
        android:supportsRtl="true">
		<activity
            android:name=".activity.MainActivity"
			android:launchMode="singleInstance"
            android:label="@string/app_name"
            android:configChanges="touchscreen|keyboard|keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:scheme="telnet" />
			</intent-filter>
		</activity>
		<activity
			android:name=".activity.SetupActivity"
			android:launchMode="singleInstance" />
		<activity
			android:name=".activity.LaunchDaemonActivity"
			android:launchMode="singleInstance" />
	<service android:name="de.fuberlin.service.NotificationService"/>
	<service android:name="de.fuberlin.service.DataService" />
	</application>
</manifest>
