<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="de.fuberlin.dessert" android:versionCode="3" android:versionName="1.1.0">
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.ACCESS_SUPERUSER" />
	<application android:icon="@drawable/icon" android:theme="@android:style/Theme.Holo"
		android:label="@string/app_name" android:name="DessertApplication" android:supportsRtl="true">
		<activity android:name=".activity.MainActivity" android:label="@string/app_name"
			android:configChanges="touchscreen|keyboard|keyboardHidden|orientation">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".activity.TabRunningDaemonActivity" />
		<activity android:name=".activity.TabInstalledDaemonsActivity" />
		<activity android:name=".activity.TabDaemonRepositoryActivity" />
		<activity android:name=".activity.LaunchDaemonActivity" />
		<activity android:name=".activity.SetupActivity" />
	<service android:name="de.fuberlin.service.NotificationService"/>
	<service android:name="de.fuberlin.service.DataService" android:permission="android.permission.INTERNET"/>
	</application>
</manifest>