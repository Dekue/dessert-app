<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2.5dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="#ffffff"
            android:text="@string/main_menu"
            android:gravity="center"
            android:clickable="false" />
        <ImageView
            android:contentDescription="@string/none"
            android:background="@android:color/holo_red_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="1dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/DrawerPrefButton"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#ffffff"
            android:text="@string/preferences"
            android:gravity="start|center_vertical"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/settings"
            android:drawableStart="@drawable/settings"
            android:clickable="true"
            android:longClickable="false" />
        <ImageView
            android:contentDescription="@string/none"
            android:background="#444444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0.5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/DrawerAboutButton"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:textColor="#ffffff"
            android:text="@string/about"
            android:gravity="start|center_vertical"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/about"
            android:drawableStart="@drawable/about"
            android:clickable="true"
            android:longClickable="false" />
        <ImageView
            android:contentDescription="@string/none"
            android:background="#444444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0.5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />
        <Button
            android:id="@+id/DrawerExitButton"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:paddingStart="17dp"
            android:paddingEnd="15dp"
            android:textColor="#ffffff"
            android:text="@string/exit"
            android:gravity="start|center_vertical"
            android:background="@android:color/transparent"
            android:drawablePadding="10dp"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/exit"
            android:drawableStart="@drawable/exit"
            android:clickable="true"
            android:longClickable="false" />
        <ImageView
            android:contentDescription="@string/none"
            android:background="#444444"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0.5dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>
