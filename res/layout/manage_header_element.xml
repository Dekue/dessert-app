<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content"
	android:layout_width="fill_parent" android:orientation="vertical" android:id="@+id/HeaderView">
	<TextView android:layout_height="wrap_content" android:textStyle="bold" android:layout_width="fill_parent" android:text="@string/daemon_running"
		android:textAppearance="?android:attr/textAppearanceLarge" />
	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/NotRunningLayout"
		android:orientation="vertical">
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/daemon_not_running"
			android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" android:gravity="center_horizontal" />
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/RunningLayout"
		android:orientation="vertical">
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/NameText" android:text="&lt;NOT SET&gt; Name" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/VersionText" android:text="&lt;NOT SET&gt; Version" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/PidText" android:text="&lt;NOT SET&gt; PID" />
		<TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/CliportText" android:text="&lt;NOT SET&gt; CLI Port" />
	</LinearLayout>
</LinearLayout> 
